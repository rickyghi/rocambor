{
  "name": "tresillo-server",
  "version": "1.1.1",
  "private": true,
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only server.ts",
    "build": "npm run clean && tsc -p tsconfig.json",
    "start": "node --enable-source-maps dist/server.js",
    "clean": "rimraf dist",
    "postinstall": "npm run build",
    "migrate": "node scripts/migrate.js",
    "type-check": "tsc --noEmit",
    "test": "npm run type-check && npm run build"
  },
  "dependencies": {
    "ws": "^8.18.0",
    "pg": "^8.12.0",
    "ioredis": "^5.3.2",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "typescript": "^5.6.2",
    "ts-node-dev": "^2.0.0",
    "@types/node": "^22.5.0",
    "@types/ws": "^8.5.10",
    "@types/pg": "^8.6.6",
    "rimraf": "^5.0.7"
  },
  "engines": { 
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}